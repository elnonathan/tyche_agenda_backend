  "license": "ISC",
  "dependencies": {
    "@libsql/client": "^0.15.8",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.2",
    "express": "^4.19.2",
    "luxon": "^3.6.1",
    "yup": "^1.6.1"
  }
}
